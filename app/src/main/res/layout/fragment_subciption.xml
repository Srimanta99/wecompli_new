<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="subcription"
            type="com.wecompli.viewmodel.SubcriptionViewModel" />
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/top_two_rounded_corner_white"
        >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_10sdp">

        <RelativeLayout
            android:id="@+id/rl_notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/add_check_top_cell">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_8sdp"
                app:font="@{`rajDhaniBold`}"
                android:text="@string/note"></TextView>
        </RelativeLayout>
          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              app:layout_constraintLeft_toRightOf="@id/rl_notes"
              android:layout_marginLeft="@dimen/_65sdp"
              app:layout_constraintTop_toTopOf="parent"
              android:textSize="@dimen/_11sdp"
              app:font="@{`rajDhaniSemiBold`}"
              android:text="Please select a package that suits your need and press continue"
              ></TextView>


        <RelativeLayout
            android:id="@+id/rl_subfree"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp"
            app:layout_constraintTop_toBottomOf="@id/rl_notes"
            android:background="@drawable/subcription_blue_rounded_corner"
            android:layout_marginTop="@dimen/_15sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/_18sdp"
                android:padding="@dimen/_10sdp"
                app:font="@{`rajDhaniBold`}"
                android:text="FREE"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp"
                android:padding="@dimen/_10sdp"
                app:font="@{`rajDhaniBold`}"
                android:layout_alignParentBottom="true"
                android:text="1 SITE \n1 USER"></TextView>

            <RelativeLayout
                android:layout_width="@dimen/_180sdp"
                android:layout_height="match_parent"
                android:background="@drawable/rectangular_shape_four_rounded_corner_white"
                android:layout_alignParentRight="true">
                <CheckBox
                    android:id="@+id/chk_free"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:padding="@dimen/_5sdp"
                    android:button="@drawable/custom_checkbox_selector"
                  android:layout_alignParentRight="true"></CheckBox>

                <TextView
                    android:id="@+id/tvfreeboolet1"
                    android:layout_width="@dimen/_7sdp"
                    android:layout_height="@dimen/_7sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/rectangular_shape_rounded_corner_lightgrey"
                    android:layout_below="@id/chk_free"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_12sdp"
                    android:layout_below="@id/chk_free"
                    android:text="50 CHECKS"
                    app:font="@{`rajDhaniBold`}"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_toRightOf="@id/tvfreeboolet1"></TextView>

                <TextView
                    android:id="@+id/tvfreeboolet2"
                    android:layout_width="@dimen/_7sdp"
                    android:layout_height="@dimen/_7sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/rectangular_shape_rounded_corner_lightgrey"
                    android:layout_below="@id/tvfreeboolet1"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_12sdp"
                    android:layout_below="@id/tvfreeboolet1"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="UNLIMITED FAULT"
                    app:font="@{`rajDhaniBold`}"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_toRightOf="@id/tvfreeboolet1"></TextView>

                <TextView
                    android:id="@+id/tvfreeboolet3"
                    android:layout_width="@dimen/_7sdp"
                    android:layout_height="@dimen/_7sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/rectangular_shape_rounded_corner_lightgrey"
                    android:layout_below="@id/tvfreeboolet2"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_12sdp"
                    android:layout_below="@id/tvfreeboolet2"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="UNLIMITED INCIDENTS"
                    app:font="@{`rajDhaniBold`}"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_toRightOf="@id/tvfreeboolet2"></TextView>
                <TextView
                    android:id="@+id/tvfreeboolet4"
                    android:layout_width="@dimen/_7sdp"
                    android:layout_height="@dimen/_7sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/rectangular_shape_rounded_corner_lightgrey"
                    android:layout_below="@id/tvfreeboolet3"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_12sdp"
                    android:layout_below="@id/tvfreeboolet3"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="UNLIMITED DOCUMENTS"
                    app:font="@{`rajDhaniBold`}"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_toRightOf="@id/tvfreeboolet3"></TextView>
            </RelativeLayout>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_premium"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp"
            app:layout_constraintTop_toBottomOf="@id/rl_subfree"
            android:background="@drawable/subcription_orange_rounded_corner"
            android:layout_marginTop="@dimen/_15sdp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/_18sdp"
                android:padding="@dimen/_10sdp"
                app:font="@{`rajDhaniBold`}"
                android:text="PREMIUM"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp"
                android:padding="@dimen/_10sdp"
                app:font="@{`rajDhaniBold`}"
                android:layout_alignParentBottom="true"
                android:text="5 SITE \n5 USER"></TextView>
            <RelativeLayout
                android:layout_width="@dimen/_180sdp"
                android:layout_height="match_parent"
                android:background="@drawable/rectangular_shape_four_rounded_corner_white"
                android:layout_alignParentRight="true">
                <CheckBox
                    android:id="@+id/chk_premium"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:padding="@dimen/_5sdp"
                    android:button="@drawable/custom_checkbox_selector"
                    android:layout_alignParentRight="true"></CheckBox>

                <TextView
                    android:id="@+id/tvpremiumboolet1"
                    android:layout_width="@dimen/_7sdp"
                    android:layout_height="@dimen/_7sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/rectangular_shape_rounded_corner_lightgrey"
                    android:layout_below="@id/chk_premium"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_12sdp"
                    android:layout_below="@id/chk_premium"
                    android:text="200 CHECKS"
                    app:font="@{`rajDhaniBold`}"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_toRightOf="@id/tvpremiumboolet1"></TextView>

                <TextView
                    android:id="@+id/tvpremiumboolet2"
                    android:layout_width="@dimen/_7sdp"
                    android:layout_height="@dimen/_7sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/rectangular_shape_rounded_corner_lightgrey"
                    android:layout_below="@id/tvpremiumboolet1"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_12sdp"
                    android:layout_below="@id/tvpremiumboolet1"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="UNLIMITED FAULT"
                    app:font="@{`rajDhaniBold`}"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_toRightOf="@id/tvpremiumboolet1"></TextView>

                <TextView
                    android:id="@+id/tvpremiumboolet3"
                    android:layout_width="@dimen/_7sdp"
                    android:layout_height="@dimen/_7sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/rectangular_shape_rounded_corner_lightgrey"
                    android:layout_below="@id/tvpremiumboolet2"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_12sdp"
                    android:layout_below="@id/tvpremiumboolet2"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="UNLIMITED INCIDENTS"
                    app:font="@{`rajDhaniBold`}"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_toRightOf="@id/tvpremiumboolet2"></TextView>
                <TextView
                    android:id="@+id/tvpremiumboolet4"
                    android:layout_width="@dimen/_7sdp"
                    android:layout_height="@dimen/_7sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/rectangular_shape_rounded_corner_lightgrey"
                    android:layout_below="@id/tvpremiumboolet3"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_12sdp"
                    android:layout_below="@id/tvpremiumboolet3"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="UNLIMITED DOCUMENTS"
                    app:font="@{`rajDhaniBold`}"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_toRightOf="@id/tvpremiumboolet2"></TextView>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_parpale"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp"
            app:layout_constraintTop_toBottomOf="@id/rl_premium"
            android:background="@drawable/subcription_parpale_rounded_corner"
            android:layout_marginTop="@dimen/_15sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:text="UNLIMITED"
                android:textColor="@color/white"
                android:textSize="@dimen/_18sdp"
                app:font="@{`rajDhaniBold`}"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp"
                android:padding="@dimen/_10sdp"
                app:font="@{`rajDhaniBold`}"
                android:layout_alignParentBottom="true"
                android:text="UNLIMITED SITE \nUNLIMITED USER"></TextView>
            <RelativeLayout
                android:layout_width="@dimen/_180sdp"
                android:layout_height="match_parent"
                android:background="@drawable/rectangular_shape_four_rounded_corner_white"
                android:layout_alignParentRight="true">

                <CheckBox
                    android:id="@+id/chk_unlimited"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:padding="@dimen/_5sdp"
                    android:button="@drawable/custom_checkbox_selector"
                    android:layout_alignParentRight="true"></CheckBox>

                <TextView
                    android:id="@+id/tvunlimitedboolet1"
                    android:layout_width="@dimen/_7sdp"
                    android:layout_height="@dimen/_7sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/rectangular_shape_rounded_corner_lightgrey"
                    android:layout_below="@id/chk_unlimited"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_12sdp"
                    android:layout_below="@id/chk_unlimited"
                    android:text="UNLIMITED CHECKS"
                    app:font="@{`rajDhaniBold`}"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_toRightOf="@id/tvunlimitedboolet1"></TextView>

                <TextView
                    android:id="@+id/tvunlimitedboolet2"
                    android:layout_width="@dimen/_7sdp"
                    android:layout_height="@dimen/_7sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/rectangular_shape_rounded_corner_lightgrey"
                    android:layout_below="@id/tvunlimitedboolet1"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_12sdp"
                    android:layout_below="@id/tvunlimitedboolet1"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="UNLIMITED FAULT"
                    app:font="@{`rajDhaniBold`}"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_toRightOf="@id/tvunlimitedboolet1"></TextView>

                <TextView
                    android:id="@+id/tvunlimitedboolet3"
                    android:layout_width="@dimen/_7sdp"
                    android:layout_height="@dimen/_7sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/rectangular_shape_rounded_corner_lightgrey"
                    android:layout_below="@id/tvunlimitedboolet2"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_12sdp"
                    android:layout_below="@id/tvunlimitedboolet2"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="UNLIMITED INCIDENTS"
                    app:font="@{`rajDhaniBold`}"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_toRightOf="@id/tvunlimitedboolet2"></TextView>
                <TextView
                    android:id="@+id/tvunlimitedboolet4"
                    android:layout_width="@dimen/_7sdp"
                    android:layout_height="@dimen/_7sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/rectangular_shape_rounded_corner_lightgrey"
                    android:layout_below="@id/tvunlimitedboolet3"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_12sdp"
                    android:layout_below="@id/tvunlimitedboolet3"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="UNLIMITED DOCUMENTS"
                    app:font="@{`rajDhaniBold`}"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_toRightOf="@id/tvunlimitedboolet3"></TextView>
            </RelativeLayout>
        </RelativeLayout>


        <TextView
            android:id="@+id/tv_submit_site"
            android:layout_width="@dimen/_170sdp"
            android:layout_height="@dimen/_44sdp"
            android:text="@string/submit"
            android:textColor="#fff"
            android:textSize="@dimen/_13sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/_15sdp"
              app:layout_constraintTop_toBottomOf="@id/rl_parpale"
            android:background="@drawable/botton_rounded_corner"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:font="@{`rajDhaniBold`}"
            android:gravity="center">
        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
    </ScrollView>
</layout>