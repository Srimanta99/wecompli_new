<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/llfaultmain"
    android:background="@drawable/rectangular_shape_rounded_corner_white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/_80sdp"
    android:layout_margin="@dimen/_10sdp"
    >
    <TextView
        android:id="@+id/tv_faultname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_16sdp"
        android:layout_marginRight="@dimen/_20sdp"

        android:layout_marginTop="@dimen/_4sdp"
        android:text="Checks Name"></TextView>
    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_faultname"
        android:layout_marginTop="@dimen/_5sdp"
        android:padding="@dimen/_5sdp"
        android:textColor="@color/black"
        android:background="@drawable/rectangular_shape_rounded_corner_grey"
        android:text="STATUS:"></TextView>
    <TextView
        android:id="@+id/tv_statusval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_faultname"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_toRightOf="@id/tv_status"></TextView>
    <TextView
        android:id="@+id/tv_sep"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/_7sdp"
        android:background="@color/dialog_grey_color"
        android:layout_below="@+id/tv_status"></TextView>
    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_sep"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="Date : 12/2/2022"
       ></TextView>

    <ImageView
        android:id="@+id/img_downarrow"
        android:layout_width="@dimen/_12sdp"
        android:layout_height="@dimen/_8sdp"
        android:background="@drawable/down_arrow"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_centerVertical="true"

        android:layout_alignParentRight="true"></ImageView>

    <ImageView
        android:id="@+id/imagestatus"
        android:layout_width="@dimen/_5sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/red">

    </ImageView>

</RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:orientation="vertical"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/tv_remarks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_faultname"
            android:layout_marginTop="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:textColor="@color/black"
            android:background="@drawable/rectangular_shape_rounded_corner_grey"
            android:text="REMARK:"></TextView>

        <TextView
            android:id="@+id/tv_remarkvalue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp">
        <ImageView
            android:id="@+id/img_fault1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"></ImageView>
            <ImageView
                android:id="@+id/img_fault2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"></ImageView>
            <ImageView
                android:id="@+id/img_fault3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"></ImageView>
            <ImageView
                android:id="@+id/img_fault4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"></ImageView>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_5sdp">
            <RelativeLayout
                android:id="@+id/rl_delete"
                android:layout_width="@dimen/_32sdp"
                android:layout_height="@dimen/_32sdp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_5sdp"
                android:background="@drawable/rectangular_shape_rounded_corner_blue">
                <ImageView
                    android:id="@+id/img_delete"
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_13sdp"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@drawable/delete_site"></ImageView>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_edit"
                android:layout_width="@dimen/_32sdp"
                android:layout_height="@dimen/_32sdp"

                android:layout_centerVertical="true"

                android:layout_marginRight="@dimen/_10sdp"
                android:layout_toLeftOf="@id/rl_delete"
                android:background="@drawable/rectangular_shape_rounded_corner_grey">
                <ImageView
                    android:id="@+id/img_edit"
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@drawable/edit_site"></ImageView>
            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_10sdp"
            android:background="@color/bg_color"></TextView>
    </LinearLayout>
</LinearLayout>