<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_color">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_9sdp"
        android:layout_marginRight="@dimen/_9sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:orientation="vertical"
        android:background="@drawable/rectangular_shape_rounded_corner_white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp">
            <TextView
                android:id="@+id/tv_checklistname"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Check List name"
                android:gravity="center_vertical"
               android:textSize="@dimen/_13sdp"
                android:padding="@dimen/_9sdp"
                android:textColor="@color/textcolor"
                android:layout_centerVertical="true"></TextView>

            <ImageView
                android:id="@+id/img_downarrow"
                android:layout_width="@dimen/_21sdp"
                android:layout_height="@dimen/_13sdp"
                 android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/down_arrow"
                android:layout_margin="@dimen/_9sdp"></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_9sdp"
                android:background="@drawable/rectangular_shape_rounded_corner_grey"
                android:text=" Daily"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:textSize="@dimen/_10sdp"
                android:layout_toLeftOf="@id/img_downarrow"></TextView>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/ll_check_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_9sdp"
            android:visibility="gone"
            android:orientation="vertical">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerVertical="true"
              android:layout_marginRight="@dimen/_9sdp"
              android:background="@drawable/rectangular_shape_rounded_corner_grey"
              android:text="NOTES : "
              android:paddingLeft="@dimen/_10sdp"
              android:paddingRight="@dimen/_10sdp"
              android:paddingTop="@dimen/_5sdp"
              android:paddingBottom="@dimen/_5sdp"
              android:textColor="@color/textcolor"
              android:textSize="@dimen/_11sdp"
             ></TextView>
          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/_10sdp"
              android:textSize="@dimen/_9sdp"></TextView>
      </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_14sdp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_9sdp"
                    android:background="@drawable/rectangular_shape_rounded_corner_grey"
                    android:text="SITES : "
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/_11sdp"
                    ></TextView>
                <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:padding="@dimen/_5sdp"
                    ></com.google.android.flexbox.FlexboxLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_9sdp"
                    android:background="@drawable/rectangular_shape_rounded_corner_grey"
                    android:text="WEEKLY : "
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/_11sdp"
                    ></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textSize="@dimen/_9sdp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_9sdp"
                    android:background="@drawable/rectangular_shape_rounded_corner_grey"
                    android:text="CHECKS : "
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/_11sdp"
                    ></TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginLeft="@dimen/_10sdp">
                    <RelativeLayout
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"

                        android:layout_marginRight="@dimen/_10sdp"
                        android:background="@drawable/rounded_shape_blue">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="20"
                            android:gravity="center_vertical"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_11sdp"></TextView>

                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_30sdp"
                        android:background="@drawable/rectangular_shape_white_round_corner_lightgrey_broder">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:layout_marginRight="@dimen/_9sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:background="@drawable/view"></ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:text="View"
                            android:gravity="center_vertical"
                           android:layout_marginRight="@dimen/_8sdp"
                            android:textSize="@dimen/_11sdp"></TextView>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_9sdp"
                    android:background="@drawable/rectangular_shape_rounded_corner_grey"
                    android:text="STATUS : "
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/_11sdp"
                    ></TextView>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginLeft="@dimen/_10sdp">
                    <ImageView
                        android:id="@+id/img_active"
                        android:layout_width="@dimen/_22sdp"
                        android:layout_height="@dimen/_22sdp"
                        android:layout_centerVertical="true"

                        android:background="@drawable/active"></ImageView>

                    <TextView
                        android:id="@+id/tv_status"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="19dp"
                        android:layout_toRightOf="@id/img_active"
                        android:gravity="center_vertical"
                        android:text="Active"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/_13sdp"></TextView>
                </RelativeLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_5sdp">
                <RelativeLayout
                    android:id="@+id/rl_delete"
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"

                    android:layout_marginRight="@dimen/_5sdp"
                    android:background="@drawable/rectangular_shape_rounded_corner_blue">
                    <ImageView
                        android:id="@+id/img_delete"
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_13sdp"
                        android:layout_centerInParent="true"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@drawable/delete_site"></ImageView>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rr_edit"
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"

                    android:layout_centerVertical="true"

                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_toLeftOf="@id/rl_delete"
                    android:background="@drawable/rectangular_shape_rounded_corner_grey">
                    <ImageView
                        android:id="@+id/img_edit"
                        android:layout_width="@dimen/_13sdp"
                        android:layout_height="@dimen/_13sdp"
                        android:layout_centerInParent="true"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@drawable/edit_site"></ImageView>
                </RelativeLayout>

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>