<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_color">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_9sdp"
        android:layout_marginRight="@dimen/_9sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:orientation="vertical"
        android:background="@drawable/rectangular_shape_rounded_corner_white">

        <RelativeLayout
            android:id="@+id/rr_headercheck"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp">
            <TextView
                android:id="@+id/tv_checklistname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check List name"
                android:gravity="center_vertical"
               android:textSize="@dimen/_13sdp"
                android:padding="@dimen/_9sdp"
                android:layout_marginRight="@dimen/_135sdp"
                android:textColor="@color/textcolor_check_list"
                android:layout_centerVertical="true"></TextView>

            <ImageView
                android:id="@+id/img_downarrow"
                android:layout_width="@dimen/_14sdp"
                android:layout_height="@dimen/_9sdp"
                 android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/down_arrow"
                android:layout_margin="@dimen/_9sdp"></ImageView>

            <TextView
                android:id="@+id/tv_check_module"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/img_downarrow"
                android:background="@drawable/rectangular_shape_rounded_corner_grey"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingRight="@dimen/_10sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:text=" "
                android:textAllCaps="true"
                android:textSize="@dimen/_10sdp"></TextView>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/ll_check_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_9sdp"
            android:visibility="gone"
            android:layout_below="@+id/rr_headercheck"
            android:orientation="vertical">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
          <TextView
              android:id="@+id/tv_note"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerVertical="true"
              android:layout_marginRight="@dimen/_9sdp"
              android:background="@drawable/rectangular_shape_rounded_corner_grey"
              android:text="@string/note_checklist"
              android:paddingLeft="@dimen/_10sdp"
              android:paddingRight="@dimen/_10sdp"
              android:paddingTop="@dimen/_5sdp"
              android:paddingBottom="@dimen/_5sdp"
              android:textColor="@color/textcolor_check_list"
              android:textSize="@dimen/_11sdp"></TextView>
          <com.google.android.flexbox.FlexboxLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/_10sdp"
              android:layout_marginTop="@dimen/_5sdp"
              android:layout_marginRight="@dimen/_10sdp"
              app:flexDirection="row"
              app:flexWrap="wrap"
              app:justifyContent="flex_start">
              <TextView
                  android:id="@+id/tv_note_text"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text=" "

                  android:textSize="@dimen/_11sdp"></TextView>
          </com.google.android.flexbox.FlexboxLayout>

      </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp">
                <TextView
                    android:id="@+id/tv_site"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_9sdp"
                    android:background="@drawable/rectangular_shape_rounded_corner_grey"
                    android:text="@string/site_checklist"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:textColor="@color/textcolor_check_list"
                    android:textSize="@dimen/_11sdp"
                    ></TextView>
                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/flex_site"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    app:flexDirection="row"
                    app:flexWrap="wrap"
                    app:justifyContent="flex_start"
                    ></com.google.android.flexbox.FlexboxLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp">
                <TextView
                    android:id="@+id/tv_checks_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_9sdp"
                    android:background="@drawable/rectangular_shape_rounded_corner_grey"
                    android:text=" "
                    android:paddingLeft="@dimen/_10sdp"
                    android:textAllCaps="true"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:textColor="@color/textcolor_check_list"
                    android:textSize="@dimen/_11sdp"></TextView>
                <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    app:flexDirection="row"
                    app:flexWrap="wrap"
                    app:justifyContent="flex_start">
                <TextView
                    android:id="@+id/tv_checkvalue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textSize="@dimen/_11sdp"></TextView>
                </com.google.android.flexbox.FlexboxLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp">
                <TextView
                    android:id="@+id/tv_checks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_9sdp"
                    android:background="@drawable/rectangular_shape_rounded_corner_grey"
                    android:text="@string/checks_checklist"

                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:textColor="@color/textcolor_check_list"
                    android:textSize="@dimen/_11sdp"
                    ></TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp">
                    <RelativeLayout
                        android:layout_width="@dimen/_26sdp"
                        android:layout_height="@dimen/_26sdp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"

                        android:layout_marginRight="@dimen/_10sdp"
                        android:background="@drawable/rounded_shape_blue">

                        <TextView
                            android:id="@+id/tv_checkscount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="20"
                            android:gravity="center_vertical"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_11sdp"></TextView>

                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_30sdp"
                        android:background="@drawable/rectangular_shape_white_round_corner_lightgrey_broder">
                        <ImageView
                            android:layout_width="@dimen/_18sdp"
                            android:layout_height="@dimen/_12sdp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_7sdp"
                            android:layout_marginRight="@dimen/_7sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginBottom="@dimen/_2sdp"
                            android:background="@drawable/view"></ImageView>

                        <TextView
                            android:id="@+id/tv_view"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:text="View"
                            android:gravity="center_vertical"
                           android:layout_marginRight="@dimen/_8sdp"
                            android:textSize="@dimen/_10sdp"></TextView>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp">
                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_9sdp"
                    android:background="@drawable/rectangular_shape_rounded_corner_grey"
                    android:text="@string/status_checklist"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:textColor="@color/textcolor_check_list"
                    android:textSize="@dimen/_11sdp"
                    ></TextView>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginLeft="@dimen/_10sdp">
                    <ImageView
                        android:id="@+id/img_active"
                        android:layout_width="@dimen/_22sdp"
                        android:layout_height="@dimen/_22sdp"
                        android:layout_centerVertical="true"

                        android:background="@drawable/active"></ImageView>

                    <TextView
                        android:id="@+id/tv_status_val"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="19dp"
                        android:layout_toRightOf="@id/img_active"
                        android:gravity="center_vertical"
                        android:text="@string/active"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/_13sdp"></TextView>
                </RelativeLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:layout_marginLeft="@dimen/_5sdp">
                <RelativeLayout
                    android:id="@+id/rl_delete"
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"

                    android:layout_marginRight="@dimen/_5sdp"
                    android:background="@drawable/rectangular_shape_rounded_corner_blue">
                    <ImageView
                        android:id="@+id/img_delete"
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_13sdp"
                        android:layout_centerInParent="true"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@drawable/delete_site"></ImageView>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rr_edit"
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"

                    android:layout_centerVertical="true"

                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_toLeftOf="@id/rl_delete"
                    android:background="@drawable/rectangular_shape_rounded_corner_grey">
                    <ImageView
                        android:id="@+id/img_edit"
                        android:layout_width="@dimen/_13sdp"
                        android:layout_height="@dimen/_13sdp"
                        android:layout_centerInParent="true"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@drawable/edit_site"></ImageView>
                </RelativeLayout>

            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>