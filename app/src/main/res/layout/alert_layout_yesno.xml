<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
           <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_170sdp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@drawable/rectangular_shape_white_round_corner_lightgrey_broder">
            <ImageView

                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:background="@drawable/logo_bg"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_centerHorizontal="true">

            </ImageView>

        <TextView
                android:id="@+id/tv_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="@dimen/_12sdp"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_margin="@dimen/_10sdp"></TextView>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/_14sdp">
            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                <TextView
                        android:id="@+id/tv_ok"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_alignParentBottom="true"
                        android:text="@string/confirm"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp"
                       android:gravity="center"
                        android:background="@drawable/rectangular_shape_blue"
                       android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        ></TextView>
            </RelativeLayout>
            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                <TextView
                        android:id="@+id/tv_no"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_alignParentBottom="true"
                        android:text="@string/cancel"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp"
                        android:background="@drawable/rectangular_shape_red"
                      android:layout_alignParentLeft="true"
                    android:gravity="center"
                        android:layout_marginLeft="@dimen/_10sdp"
                        ></TextView>
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>