<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/_260sdp"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_with_broder"
        >

        <TextView
            android:id="@+id/tv_selectlanguage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="SELECT LANGUAGE"
            android:textColor="@color/textcolor"
            android:textAllCaps="true"
            app:font="@{`rajDhaniBold`}"
            android:layout_marginTop="@dimen/_15sdp"
            android:textSize="@dimen/_15sdp"></TextView>
        <TextView
            android:id="@+id/tv_english"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="@string/english"
            android:textSize="@dimen/_14sdp"
            android:layout_margin="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_15sdp"
            app:font="@{`rajDhaniSemiBold`}"
            app:layout_constraintTop_toBottomOf="@+id/tv_selectlanguage"></TextView>
        <TextView
            android:id="@+id/sep1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            app:layout_constraintTop_toBottomOf="@id/tv_english"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@color/bg_color"
            ></TextView>
        <TextView
            android:id="@+id/tv_douch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="@string/douch"
            android:textSize="@dimen/_14sdp"
            android:layout_margin="@dimen/_12sdp"
            app:font="@{`rajDhaniSemiBold`}"
            app:layout_constraintTop_toBottomOf="@id/tv_english"></TextView>
        <TextView
            android:id="@+id/sep2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            app:layout_constraintTop_toBottomOf="@id/tv_douch"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"

            android:background="@color/bg_color"
            ></TextView>
        <TextView
            android:id="@+id/tv_french"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="@string/french"
            android:textSize="@dimen/_14sdp"
            android:layout_margin="@dimen/_12sdp"
            app:font="@{`rajDhaniSemiBold`}"
            app:layout_constraintTop_toBottomOf="@id/tv_douch"></TextView>
        <TextView
            android:id="@+id/sep3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            app:layout_constraintTop_toBottomOf="@id/tv_french"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@color/bg_color"
            ></TextView>
        <TextView
            android:id="@+id/tv_garman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="@string/germen"
            android:textSize="@dimen/_14sdp"
            android:layout_marginLeft="@dimen/_12sdp"
            android:layout_marginRight="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_12sdp"
            app:font="@{`rajDhaniSemiBold`}"
            app:layout_constraintTop_toBottomOf="@id/tv_french"></TextView>
        <TextView
            android:id="@+id/sep4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            app:layout_constraintTop_toBottomOf="@id/tv_garman"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@color/textcolor"
            android:visibility="invisible"
            ></TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
