<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >
    <data>
        <variable
            name="docaddviewmodel"
            type="com.wecompli.viewmodel.DocAddModel" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/top_two_rounded_corner_white"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_60sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_Select_company"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_margin="@dimen/_3sdp"

                    android:paddingRight="@dimen/_8sdp"
                    android:hint="Select Company"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/_8sdp"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/text_color_newtask"
                    app:font="@{`rajDhaniSemiBold`}"
                    android:background="@drawable/rectangular_shape_thin_round_gery_broder"/>
                <TextView
                    android:id="@+id/tv_select_site"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_margin="@dimen/_3sdp"
                    android:layout_below="@+id/tv_Select_category"

                    android:paddingRight="@dimen/_8sdp"
                    android:hint="Select Site"
                    android:gravity="center_vertical"
                    app:font="@{`rajDhaniSemiBold`}"
                    android:paddingLeft="@dimen/_8sdp"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/text_color_newtask"

                    android:background="@drawable/rectangular_shape_thin_round_gery_broder"/>
                <EditText
                    android:id="@+id/et_document_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_margin="@dimen/_3sdp"
                    android:paddingRight="@dimen/_8sdp"
                    android:hint=" Enter Docement name"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_color_newtask"
                    android:paddingLeft="@dimen/_8sdp"
                    android:textSize="@dimen/_12sdp"
                    app:font="@{`rajDhaniSemiBold`}"
                    android:background="@drawable/rectangular_shape_thin_round_gery_broder"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_margin="@dimen/_3sdp">
                    <RelativeLayout
                        android:id="@+id/rl_start_date"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:background="@drawable/rectangular_shape_thin_round_gery_broder">
                        <TextView
                            android:id="@+id/tv_start_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:paddingLeft="@dimen/_8sdp"
                            android:textColor="@color/text_color_newtask"
                            app:font="@{`rajDhaniSemiBold`}"
                            android:hint="Start Date"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:background="@drawable/calendar"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rl_end_date"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:background="@drawable/rectangular_shape_thin_round_gery_broder">
                        <TextView
                            android:id="@+id/tv_end_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:paddingLeft="@dimen/_8sdp"
                            android:textColor="@color/text_color_newtask"
                            app:font="@{`rajDhaniSemiBold`}"
                            android:hint="End Date"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:background="@drawable/calendar"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_margin="@dimen/_3sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:background="@drawable/rectangular_shape_thin_round_gery_broder">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/_5sdp">

                        <TextView
                            android:id="@+id/tv_update_image"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:textColor="@color/text_color_newtask"
                            app:font="@{`rajDhaniSemiBold`}"
                            android:text="Upload Certificate\n Image Only"/>
                        <Button
                            android:id="@+id/btn_choose_file"
                            android:layout_width="@dimen/_95sdp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:text="CHOOSE FILE"
                            android:textColor="@color/white"
                            app:font="@{`rajDhaniBold`}"
                            android:textSize="@dimen/_11sdp"
                            android:background="@drawable/rectangle_deep_gray_rounded_corner"/>
                    </RelativeLayout>
                    <LinearLayout
                        android:id="@+id/ll_image"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        android:orientation="vertical"
                        >
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rec_imaglist"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5sdp">

                        </androidx.recyclerview.widget.RecyclerView>
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_select_week"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_margin="@dimen/_3sdp"

                    android:background="@drawable/rectangular_shape_thin_round_gery_broder"
                    android:gravity="center_vertical"
                    android:hint="Notify me about expiry"
                    android:paddingLeft="@dimen/_8sdp"
                    android:paddingRight="@dimen/_8sdp"
                    app:font="@{`rajDhaniSemiBold`}"
                    android:textColor="@color/text_color_newtask"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/tv_notify_who"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_margin="@dimen/_3sdp"
                    android:textColor="@color/text_color_newtask"
                    android:paddingRight="@dimen/_8sdp"
                    android:hint="Notify Who "
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/_8sdp"
                    android:textSize="@dimen/_12sdp"
                    app:font="@{`rajDhaniSemiBold`}"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:background="@drawable/rectangular_shape_thin_round_gery_broder"/>

            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:id="@+id/rl_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_55sdp"
            android:layout_alignParentBottom="true"

            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rl_reset"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_10sdp"
                android:layout_weight="1"
                android:background="@drawable/gradient_login_button">
                <TextView
                    android:id="@+id/tv_reset"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="RESET "
                    android:gravity="center"
                    app:font="@{`rajDhaniBold`}"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:textColor="@color/white"/>


            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_submit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/_10sdp"

                android:background="@drawable/gradient_red_button">

                <TextView
                    android:id="@+id/tv_submit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="SUBMIT"
                    android:gravity="center"
                    app:font="@{`rajDhaniBold`}"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:textColor="@color/white"/>


            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>