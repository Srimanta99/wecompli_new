<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangular_shape_rounded_corner_white"
        android:layout_marginLeft="@dimen/_7sdp"
        android:paddingRight="@dimen/_7sdp"
        android:paddingBottom="@dimen/_3sdp"
        android:paddingTop="@dimen/_7sdp"
        android:orientation="vertical"
        android:layout_margin="@dimen/_7sdp">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/_10sdp">

        <TextView
            android:id="@+id/tv_check_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/_13sdp"
            android:layout_marginLeft="@dimen/_4sdp"
            android:padding="@dimen/_4sdp"
            android:text="Test"></TextView>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvpass"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:text="PASS"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_11sdp"
                        android:padding="@dimen/_6sdp"
                        android:background="@drawable/rectangular_shape_rounded_corner_green"></TextView>
                    <ImageView
                        android:id="@+id/img_editpass"
                        android:layout_width="@dimen/_27sdp"
                        android:layout_height="@dimen/_27sdp"
                        android:background="@drawable/green_edit"
                        android:layout_marginLeft="@dimen/_10sdp"></ImageView>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_fail"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:text="FAIL"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/rectangular_shape_rounded_corner_red"></TextView>
              <!--  <TextView
                    android:id="@+id/tv_minorfail"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:text="MINOR FAIL"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/rectangular_shape_rounded_corner_yellow"></TextView>
-->

            </LinearLayout>
            <RelativeLayout
                android:id="@+id/rlExpand"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3">
                <ImageView
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_7sdp"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/_7sdp"
                    android:padding="@dimen/_7sdp"
                    android:background="@drawable/down_arrow"></ImageView>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llChecknotesnotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_7sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_7sdp"
            android:visibility="gone"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_9sdp"
                android:background="@drawable/rectangular_shape_rounded_corner_grey"
                android:text="@string/note_checklist"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:textColor="@color/textcolor_check_list"
                android:textSize="@dimen/_11sdp"></TextView>
            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                app:flexDirection="row"
                app:flexWrap="wrap"
                app:justifyContent="flex_start">
                <TextView
                    android:id="@+id/tv_note_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" "

                    android:textSize="@dimen/_11sdp"></TextView>
            </com.google.android.flexbox.FlexboxLayout>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_7sdp"
        android:background="@color/bg_color"></LinearLayout>
</LinearLayout>